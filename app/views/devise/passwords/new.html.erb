<div class="min-h-screen flex items-center justify-center bg-[#FDFDFC] px-4">
  <div class="max-w-md w-full">
    
    <%# Branding & Navigation - FIXED BLOCK HERE %>
    <div class="text-center mb-10">
      <%= link_to root_path, class: "inline-block mb-6 group" do %>
        <div class="w-12 h-12 bg-orange-100 group-hover:bg-orange-200 rounded-2xl flex items-center justify-center mx-auto transition-colors">
          <span class="text-orange-600 font-bold text-xl">B</span>
        </div>
      <% end %>
      <h2 class="text-3xl font-black text-gray-900 tracking-tight">Reset password</h2>
      <p class="text-gray-500 mt-2">Enter your email to receive instructions</p>
    </div>

    <div class="bg-white border border-orange-100 rounded-[2rem] p-8 shadow-xl shadow-orange-100/20">
      <%# ... the rest of the form stays the same ... %>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        
        <%# Error Messages %>
        <% if resource.errors.any? %>
          <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 rounded-r-xl text-sm">
            <%= render "devise/shared/error_messages", resource: resource %>
          </div>
        <% end %>

        <div class="space-y-6">
          <%# Email Field %>
          <div>
            <%= f.label :email, class: "block text-sm font-bold text-gray-700 mb-2" %>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                placeholder: "name@example.com",
                class: "w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-orange-500 focus:ring-4 focus:ring-orange-500/10 transition-all outline-none placeholder:text-gray-300" %>
          </div>

          <%# Submit Button %>
          <div>
            <%= f.submit "Send Reset Instructions", 
                class: "w-full py-4 bg-gray-900 hover:bg-orange-600 text-white font-bold rounded-2xl transition-all duration-300 cursor-pointer shadow-lg shadow-gray-200 hover:shadow-orange-200" %>
          </div>
        </div>
      <% end %>

      <%# Footer Links %>
      <div class="mt-8 pt-6 border-t border-gray-50 text-center flex flex-col gap-3">
        <%= link_to "Back to Login", new_session_path(resource_name), class: "text-sm text-gray-500 font-semibold hover:text-orange-600" %>
      </div>
    </div>

  </div>
</div>