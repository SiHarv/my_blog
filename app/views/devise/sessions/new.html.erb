<div class="min-h-screen flex items-center justify-center bg-[#FDFDFC] px-4">
  <div class="max-w-md w-full">
    
    <%# Branding / Back to Home %>
    <div class="text-center mb-10">
      <%= link_to root_path, class: "inline-block mb-6" do %>
        <div class="w-12 h-12 bg-orange-100 rounded-2xl flex items-center justify-center mx-auto">
          <span class="text-orange-600 font-bold text-xl">B</span>
        </div>
      <% end %>
      <h2 class="text-3xl font-black text-gray-900 tracking-tight">Welcome back</h2>
      <p class="text-gray-500 mt-2">Enter your details to access your account</p>
    </div>

    <div class="bg-white border border-orange-100 rounded-[2rem] p-8 shadow-xl shadow-orange-100/20">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="space-y-6">
          <%# Email Field %>
          <div>
            <%= f.label :email, class: "block text-sm font-bold text-gray-700 mb-2" %>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                placeholder: "name@example.com",
                class: "w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-orange-500 focus:ring-4 focus:ring-orange-500/10 transition-all outline-none placeholder:text-gray-300" %>
          </div>

          <%# Password Field %>
          <div>
            <div class="flex justify-between items-center mb-2">
              <%= f.label :password, class: "text-sm font-bold text-gray-700" %>
              <%- if devise_mapping.recoverable? %>
                <%= link_to "Forgot?", new_password_path(resource_name), class: "text-xs font-semibold text-orange-600 hover:text-orange-700" %>
              <% end %>
            </div>
            <%= f.password_field :password, 
                autocomplete: "current-password",
                placeholder: "••••••••",
                class: "w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-orange-500 focus:ring-4 focus:ring-orange-500/10 transition-all outline-none placeholder:text-gray-300" %>
          </div>

          <%# Remember Me %>
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-3">
              <%= f.check_box :remember_me, class: "w-5 h-5 rounded-md border-gray-300 text-orange-600 focus:ring-orange-500 transition-all cursor-pointer" %>
              <%= f.label :remember_me, class: "text-sm font-medium text-gray-600 cursor-pointer" %>
            </div>
          <% end %>

          <%# Submit Button %>
          <div class="pt-2">
            <%= f.submit "Sign In", 
                class: "w-full py-4 bg-gray-900 hover:bg-orange-600 text-white font-bold rounded-2xl transition-all duration-300 cursor-pointer shadow-lg shadow-gray-200 hover:shadow-orange-200" %>
          </div>
        </div>
      <% end %>

      <%# Footer Links %>
      <div class="mt-8 pt-6 border-t border-gray-50 text-center">
        <p class="text-sm text-gray-500">
          Don't have an account? 
          <%= link_to "Sign up for free", new_registration_path(resource_name), class: "text-orange-600 font-bold hover:underline" %>
        </p>
      </div>
    </div>

  </div>
</div>