<%= form_with model: [post, comment], local: true do |f| %>
  <div class="field">
    <%= f.text_area :body, rows: 2, placeholder: "Write a comment..." %>
  </div>
  <div class="actions">
    <%= f.submit "Comment", class: "w-full sm:w-auto rounded-md bg-orange-400 px-5 py-2.5 font-semibold text-white shadow hover:bg-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-200" %>
  </div>
<% end %>