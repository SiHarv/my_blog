<%= form_with(model: post, local: true) do |f| %>
    <% if post.errors.any? %>
        <div class="errors">
            <h3><%= pluralize(post.errors.count, "error") %> Prohibited this post for beig saved:</h3>
            <ul>
                <% post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= f.label :title%><br>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :caption %><br>
        <%= f.text_area :caption %>
    </div>

    <div>
        <%= f.label :image, "Upload Image" %><br>
        <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div>
        <%= f.submit %>
    </div>
<% end %>

