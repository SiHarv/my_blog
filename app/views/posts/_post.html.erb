<div class="bg-white/90 border border-orange-100 rounded-2xl shadow-sm mb-8 max-w-2xl mx-auto overflow-hidden">
  <div class="p-6">
    <div class="flex items-start justify-between gap-4 border-b border-orange-100 pb-4">
      <div class="flex items-center gap-3">
        <div class="w-11 h-11 bg-orange-200 text-orange-900 rounded-full flex items-center justify-center font-semibold">
          <%= post.user.nickname&.first&.upcase || post.user.email.first.upcase %>
        </div>
        <div>
          <p class="font-semibold text-gray-800"><%= post.user.nickname || post.user.email %></p>
          <p class="text-sm text-gray-500"><%= time_ago_in_words(post.created_at) %> ago</p>
        </div>
      </div>

      <% if user_signed_in? && current_user == post.user %>
        <details class="relative">
          <summary class="cursor-pointer text-gray-500 hover:text-orange-700 text-2xl font-bold list-none">
            ‚ãØ
          </summary>
          <ul class="absolute right-0 mt-2 w-40 bg-white rounded-md shadow-lg z-10 border border-orange-100">
            <li class="hover:bg-orange-50">
              <%= link_to "Edit", edit_post_path(post), class: "block px-4 py-2 text-sm text-gray-700" %>
            </li>
            <li class="hover:bg-orange-50">
              <%= link_to "Delete", post_path(post),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "block px-4 py-2 text-sm text-orange-700" %>
            </li>
          </ul>
        </details>
      <% end %>
    </div>

    <div class="mt-4">
      <h4 class="text-2xl font-display text-gray-900 mb-2"><%= post.title %></h4>
      <div class="text-gray-700 leading-relaxed"><%= simple_format(post.caption) %></div>
    </div>

    <% if post.image.attached? %>
      <div class="mt-4 rounded-xl overflow-hidden ring-1 ring-orange-100">
        <%= image_tag post.image, alt: post.title, class: "w-full h-auto object-cover" %>
      </div>
    <% end %>

    <div class="mt-5 border-y border-orange-100 bg-orange-50/70 px-4 py-3 rounded-xl">
      <div class="flex flex-wrap items-center justify-between gap-3">
        <% if user_signed_in? %>
          <% user_vote = post.user_vote(current_user) %>
          <div class="flex items-center gap-2">

            <%# Use hotwire here! %>
            
            <%= button_to post_votes_url(post),
              method: :post,
              params: { value: 1 },
              class: "px-4 py-2 rounded-md text-sm font-semibold border border-orange-200 #{user_vote&.value == 1 ? 'bg-orange-400 text-white' : 'bg-white text-gray-700 hover:bg-orange-100'}" do %>
              üëç Upvote
            <% end %>

            <%= button_to post_votes_url(post),
              method: :post,
              params: { value: -1 },
              class: "px-4 py-2 rounded-md text-sm font-semibold border border-gray-200 #{user_vote&.value == -1 ? 'bg-gray-700 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}" do %>
              üëé Downvote
            <% end %>
          </div>

          <span id="post_votes_<%= post.id %>" class="text-sm font-semibold text-gray-700">
            <%= post.vote_count %> votes
          </span>
        <% else %>
          <p class="text-gray-600">
            <%= link_to "Sign in", new_user_session_path, class: "text-orange-700 hover:underline" %> to vote.
          </p>
        <% end %>
      </div>
    </div>

    <div class="mt-5 space-y-4">
      <%= render partial: "comments/comment",
        collection: post.comments.order(created_at: :asc),
        as: :comment,
        locals: { post: post } %>
    </div>

    <div class="mt-5 pt-4 border-t border-orange-100">
      <% if user_signed_in? %>
        <%= render "comments/form", post: post, comment: Comment.new %>
      <% else %>
        <p class="text-gray-600 text-center">
          <%= link_to "Sign in", new_user_session_path, class: "text-orange-700 hover:underline" %> to comment.
        </p>
      <% end %>
    </div>
  </div>
</div>