<% if user_signed_in? %>
  <header class="mb-8">
    <div class="flex flex-wrap items-center justify-between gap-4 rounded-2xl bg-white/70 border border-orange-100 px-6 py-4 shadow-sm backdrop-blur-md">
      
      <%# Left: User Branding %>
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-orange-100 rounded-xl flex items-center justify-center border border-orange-200 shadow-inner">
          <span class="text-orange-700 font-black text-sm uppercase">
            <%= (current_user.nickname.presence || current_user.email).first %>
          </span>
        </div>
        <div class="flex flex-col">
          <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">Welcome back</span>
          <span class="text-gray-900 font-black tracking-tight">
            <%= current_user.nickname.presence || "Writer" %>
          </span>
        </div>
      </div>

      <%# Right: Navigation Tabs %>
      <nav class="flex items-center gap-8">
        <%# Profile Link %>
        <%= link_to profile_path, class: "flex items-center gap-2 text-sm font-bold text-gray-600 hover:text-orange-600 transition-all group" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 group-hover:text-orange-500 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          Profile
        <% end %>

        <%# Sign Out Button %>
        <%= link_to "Sign Out",
          destroy_user_session_path,
          data: { turbo_method: :delete },
          class: "inline-flex items-center rounded-xl bg-gray-900 px-5 py-2.5 text-sm font-bold text-white hover:bg-orange-600 focus:outline-none focus:ring-4 focus:ring-orange-500/10 transition-all shadow-lg shadow-gray-200 hover:shadow-orange-200" %>
      </nav>

    </div>
  </header>
<% end %>