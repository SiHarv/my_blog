<% if user_signed_in? %>
  <p>Logged in as <%= current_user.email %></p>
<% end %>

<h1>Home#index</h1>

<% if user_signed_in? %>
    <p>Logged in as <%= current_user.nickname %></p>
    <%= render "posts/form", post: @post %>
    <% else %>
    <p> Please sign in to create a post.</p>
<% end %>

<h2> Recent Posts </h2>
<%= render partial: "posts/post", collection: @posts, as: :post %>
