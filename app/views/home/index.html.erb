<div class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <%# Decorative Background Elements (Low Saturated Orange) %>
  <div class="absolute top-0 -left-4 w-72 h-72 bg-orange-100 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
  <div class="absolute -bottom-8 right-20 w-96 h-96 bg-gray-200 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"></div>

  <% if user_signed_in? %>
    <div class="w-full max-w-5xl z-10 px-6">
      <%= render "shared/header" %>
      <div class="mt-12 group">
        <div class="relative p-[1px] rounded-[2rem] bg-gradient-to-b from-orange-200 to-transparent shadow-2xl shadow-orange-100/50">
          <div class="bg-white rounded-[1.95rem] p-10 transition-all group-hover:shadow-orange-200/50">
            <h2 class="text-3xl font-display font-bold text-gray-900 mb-6 tracking-tight">Share your story</h2>
            <%= render "posts/form", post: @post %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <%# High-End Minimalist Landing %>
    <div class="relative z-10 max-w-6xl w-full px-6 grid lg:grid-cols-2 gap-16 items-center">
      
      <div class="text-left">
        <div class="inline-flex items-center gap-3 px-3 py-1 rounded-full bg-white border border-gray-100 shadow-sm mb-8">
          <span class="flex h-2 w-2 rounded-full bg-orange-500"></span>
          <span class="text-xs font-bold uppercase tracking-widest text-gray-500">Version 1.0 is Live</span>
        </div>

        <h1 class="text-6xl md:text-8xl font-black text-gray-900 leading-[0.95] tracking-tighter mb-8">
          Write. <br>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-600 to-orange-400">Inspire.</span> <br>
          Connect.
        </h1>
        
        <p class="text-xl text-gray-500 max-w-md leading-relaxed mb-12 font-medium">
          A space where words carry weight. No noise, just your thoughts and a community that listens.
        </p>

        <div class="flex items-center gap-6">
          <%= link_to "Join the community", new_user_registration_path, 
              class: "px-10 py-5 bg-gray-900 text-white font-bold rounded-2xl hover:bg-orange-600 transition-all duration-300 shadow-xl shadow-gray-200" %>
          
          <%= link_to "Sign In", new_user_session_path, 
              class: "text-gray-900 font-bold border-b-2 border-orange-200 hover:border-orange-500 pb-1 transition-all" %>
        </div>
      </div>

      <%# Asymmetric Visual Element %>
      <div class="hidden lg:block relative">
        <div class="relative w-full aspect-square bg-gradient-to-br from-orange-50 to-orange-100/50 rounded-[3rem] rotate-3 overflow-hidden border border-orange-100">
           <%# This simulates a "Preview" of your blog UI %>
           <div class="absolute -right-10 top-20 w-80 bg-white p-6 rounded-2xl shadow-2xl -rotate-6 border border-gray-50">
              <div class="w-12 h-2 bg-orange-200 rounded-full mb-4"></div>
              <div class="w-full h-4 bg-gray-100 rounded-md mb-2"></div>
              <div class="w-2/3 h-4 bg-gray-100 rounded-md"></div>
           </div>
           <div class="absolute left-10 bottom-20 w-64 bg-white p-6 rounded-2xl shadow-xl rotate-12 border border-gray-50">
              <div class="flex gap-2 mb-4">
                <div class="w-6 h-6 rounded-full bg-orange-400"></div>
                <div class="w-20 h-2 bg-gray-200 rounded-full self-center"></div>
              </div>
              <div class="w-full h-3 bg-gray-50 rounded-md"></div>
           </div>
        </div>
      </div>

    </div>
  <% end %>
</div>