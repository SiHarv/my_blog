<div class="min-h-screen bg-[#FDFDFC]">
  <% if user_signed_in? %>
    <%# --- LOGGED IN VIEW --- %>
    <%= render "shared/header" %>

    <div class="max-w-2xl mx-auto px-4 pb-24">
      <%# Modern "What's on your mind" Input Card %>
      <div class="mb-12 group">
        <div class="relative p-[1px] rounded-[2rem] bg-gradient-to-b from-orange-200 to-transparent transition-all hover:shadow-2xl hover:shadow-orange-100/50">
          <div class="bg-white rounded-[1.95rem] p-8">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-8 h-8 bg-orange-600 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4" />
                </svg>
              </div>
              <h2 class="text-lg font-bold text-gray-900 tracking-tight">Create a Story</h2>
            </div>
            
            <%= render "posts/form", post: @post %>
          </div>
        </div>
      </div>

      <%# Recent Posts Header %>
      <div class="flex items-center gap-4 mb-8">
        <h2 class="text-2xl font-black text-gray-900 tracking-tight">Recent Posts</h2>
        <div class="h-[1px] flex-grow bg-gray-100"></div>
      </div>

      <%# The Feed %>
      <div id="posts" class="space-y-10">
        <%= render partial: "posts/post", collection: @posts, as: :post %>
      </div>
    </div>

  <% else %>
    <%# --- GUEST VIEW (Modern Hero) --- %>
    <div class="relative pt-20 pb-32 px-4 overflow-hidden">
      <%# Decorative Background Blur %>
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-4xl h-96 bg-orange-100/40 rounded-full blur-[120px] -z-10"></div>
      
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-6xl md:text-8xl font-black text-gray-900 leading-[0.9] tracking-tighter mb-8">
          Write.<br/>
          <span class="text-orange-600">Inspire.</span><br/>
          Connect.
        </h1>
        <p class="text-xl text-gray-500 mb-10 font-medium">Please sign in to join the conversation and create your own stories.</p>
        
        <div class="flex justify-center gap-4 mb-20">
          <%= link_to "Sign In", new_user_session_path, class: "px-10 py-4 bg-gray-900 text-white font-bold rounded-2xl hover:bg-orange-600 transition-all shadow-xl shadow-gray-200" %>
        </div>

        <%# Teaser Feed for Guests %>
        <div class="text-left">
          <div class="flex items-center gap-4 mb-8">
            <h2 class="text-xl font-bold text-gray-400 tracking-tight uppercase">Latest from the community</h2>
            <div class="h-[1px] flex-grow bg-gray-100"></div>
          </div>
          <div class="opacity-60 pointer-events-none">
            <%= render partial: "posts/post", collection: @posts.limit(2), as: :post %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>